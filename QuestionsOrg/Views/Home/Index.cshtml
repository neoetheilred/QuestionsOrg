@{
    Layout = "_Layout";
    ViewData["Title"] = "Welcome page";
}

@{
    var actionList = new string[] { "Trending questions", "Categories", "Ask", "Support" };
}
<h2 class="text-center">Welcome</h2>
<div class="row mt-5 justify-content-center">
    @foreach(var action in actionList) {
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title text-center">@action</h5>
            </div>
        </div>
    </div>
    }
</div>